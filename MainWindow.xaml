        <TextBox x:Name="age" HorizontalAlignment="Left" Height="30" Margin="335,-120,-415,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Background="White" FontSize="14" Cursor="IBeam" TextChanged="Age_TextChanged"/>
