        Title="Выбор диеты" Height="470" Width="489" Background="#FF4B4D4B" ScrollViewer.VerticalScrollBarVisibility="Auto" ResizeMode="NoResize">
    <Grid ScrollViewer.CanContentScroll="True">
        <Button x:Name="PersonalDataPage" Content="Личные данные" HorizontalAlignment="Left" Margin="322,389,-2.189,0" VerticalAlignment="Top" Width="162" Height="50" FontSize="15" Click="PersonalDataPage_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
