        <Button x:Name="ChoiceDietPage" Content="Выбор диеты" HorizontalAlignment="Left" Margin="159,389,0,0" VerticalAlignment="Top" Width="164" Height="50" FontSize="15" Click="ChoiceDietPage_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FF4F544E" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="FoodDiaryPage" Content="Дневник питания" HorizontalAlignment="Left" Margin="-2,389,0,0" VerticalAlignment="Top" Width="162" Height="50" FontSize="15" Click="FoodDiaryPage_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FF4F544E" Offset="1"/>
